{
    "name": "dlsamson/bitrix-page-template-manager",
    "description": "A package for simplifying the creation and management of page templates within a single Bitrix CMS template",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "PageTemplateManager\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "authors": [
        {
            "name": "dlsamson",
            "email": "dlsamson@yandex.ru"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "larapack/dd": "^1.1",
        "phpunit/phpunit": "^9.5|^10.0"
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "test-coverage-text": "phpunit --coverage-text"
    }
}
